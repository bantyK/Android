<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.admin.indianrail.TrainBetweenStations">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_source_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source_station"
            android:textAppearance="?android:textAppearanceLarge" />

        <EditText
            android:id="@+id/et_source_station"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_destination_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/destination_station"
            android:textAppearance="?android:textAppearanceLarge" />

        <EditText
            android:id="@+id/et_destination_station"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:textAppearanceLarge" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:onClick="dateEditTextClicked" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="submitButtonClicked"
        android:text="Submit" />

</RelativeLayout>
