<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/confirm_sign_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to sign out?"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_sign_out_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_rounded_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Sign out"
            android:textSize="20sp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/sign_out_progress_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/signing_out_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_out_progress_bar"
        android:layout_centerInParent="true"
        android:text="Signing out"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone" />


</RelativeLayout>